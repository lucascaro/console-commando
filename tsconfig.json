{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2018",
    "outDir": "lib",
    "lib": ["es2018", "scripthost"]
  },
  "include": ["src/**/*"]
}
