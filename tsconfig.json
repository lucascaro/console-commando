{
    "compileOnSave": true,
    "compilerOptions": {
        "removeComments": true,
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "Node",
        "target": "ES6",
        "outDir": "lib",
        "lib": ["es6", "scripthost"]
    },
    "include": [
        "src/**/*"
    ]
}
